<p id="notice"><%= notice %></p>

  <h2><%= @topic.name %></h2>


<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>

<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Topic id</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @topic.posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.topic_id %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= button_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_topic_post_path(@topic) %>

