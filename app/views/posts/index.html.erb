

<h1>Posts</h1>


<table>
  <thead>
  <tr>

  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>

      <td class="post-title"><%= post.title %> <span class="category-content">(<%= post.topic.name %>)</span> </td>
      <td><%= link_to 'Show', post %></td>
      <% if can? :update, post %>
      <td><%= link_to 'Edit', edit_post_path(post)   %></td>
        <% end %>
      <% if can? :destroy, post %>
      <td><%= button_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <td><%= post.comments.size %> comments</td>
      <td>Average Rating: <%= post.avg_rating %> stars</td>
     </tr>
  <% end %>
  </tbody>
</table>



<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>

<br>

